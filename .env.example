# ==================== API KEYS ====================
# Claude AI API Key (for trading validator)
CLAUDE_API_KEY=your_claude_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ==================== DATABASE ====================
# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/

# SQLite Database Path (relative or absolute)
SQLITE_DB_PATH=token_scanner.db

# ==================== FLASK CONFIGURATION ====================
# Flask Secret Key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_secret_key_here

# Flask Environment (development, production)
FLASK_ENV=development

# Flask Debug Mode (true, false)
FLASK_DEBUG=true

# ==================== EXTERNAL SERVICES ====================
# Nitter Instance URL (for Twitter scraping)
NITTER_URL=http://localhost:8080

# DexScreener API (usually no key needed)
DEXSCREENER_API=https://api.dexscreener.com

# GoPlus Labs API (usually no key needed)
GOPLUS_API=https://api.gopluslabs.io/api/v1

# ==================== SMTP CONFIGURATION (for email alerts) ====================
# SMTP Server Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your.email@gmail.com
SMTP_PASSWORD=your_gmail_app_password_here

# Enable/Disable Email Alerts (true, false)
ENABLE_ALERTS=false

# ==================== AUTO-SCAN SERVICE ====================
# Auto-scan interval in seconds (default: 300 = 5 minutes)
AUTO_SCAN_INTERVAL=300

# Number of tokens to scan per cycle
TOKENS_PER_SCAN=10

# Auto-start scanner on app launch (true, false)
AUTO_START_SCANNER=false

# ==================== TRADING CONFIGURATION ====================
# Default slippage tolerance (percentage)
DEFAULT_SLIPPAGE=1.0

# Default stop loss (percentage)
DEFAULT_STOP_LOSS=10.0

# Default take profit (percentage)
DEFAULT_TAKE_PROFIT=20.0

# Private key for trading (NEVER commit to git, use only for testing)
TRADING_PRIVATE_KEY=

# Default blockchain network
DEFAULT_CHAIN=ethereum

# ==================== SECURITY ====================
# Maximum login attempts before lockout
MAX_LOGIN_ATTEMPTS=5

# Session timeout (minutes)
SESSION_TIMEOUT=60

# Rate limiting (requests per minute)
RATE_LIMIT=100

# ==================== DEPLOYMENT ====================
# Server Host
HOST=0.0.0.0

# Server Port
PORT=5000

# Number of workers (for gunicorn)
WORKERS=4

# ==================== NOTES ====================
# 1. Copy this file to .env and fill in your values
# 2. NEVER commit .env to version control
# 3. For Gmail SMTP, use App Password (not your regular password):
#    https://myaccount.google.com/apppasswords
# 4. Generate SECRET_KEY with: python -c "import secrets; print(secrets.token_hex(32))"
